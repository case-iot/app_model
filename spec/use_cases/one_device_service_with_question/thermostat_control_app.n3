# app for controlling the thermostat

@prefix c: <http://matus.tomlein.org/case/>.
@prefix q: <http://matus.tomlein.org/case/questions/>.

@forAll :thermostat.

[
  a c:Application;
  c:name "TempControllerPro";
  c:description "An app for controlling the temperature based on the given setpoint";
  c:requirement (
    [
      c:description "Question not answered";
      c:requires_answering [
        a q:Question;
        q:text "What is the target temperature?";
        q:replyType q:temperature
      ]
    ]
    [
      c:description "Thermostat needed";
      c:condition {
        :thermostat a c:Device; a c:thermostat.
      }
    ]
  );
  c:execution (
    [
      c:description "Activate the device with the temperature"
    ]
  )
].
